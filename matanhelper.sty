% Специальная команда обрамления в кружочек
\newcommand*{\encircle}[1]{%
  \relax%
  \ifmmode%
    \mathpalette\@encircle@math{#1}%
  \else%
    \@encircle{#1}%
  \fi%
}
\newcommand*{\@encircle@math}[2]{%
  \@encircle{$\m@th#1#2$}%
}
\newcommand*{\@encircle}[1]{%
  \tikz[baseline,anchor=base] {%
    \node[draw,circle,outer sep=0pt,inner sep=.1ex] {#1};%
  }%
}

